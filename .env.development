# Local Development Environment Configuration

# Database
MONGODB_URI=mongodb://localhost:27017/cosmical_dev
MONGODB_DB_NAME=cosmical_dev

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# API
VITE_API_URL=http://localhost:5000/api/v1
VITE_API_TIMEOUT=5000

# JWT
JWT_SECRET=local_dev_secret_key
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Client-side JWT (for Vite)
VITE_JWT_SECRET=local_dev_secret_key
VITE_JWT_EXPIRES_IN=7d

# Enable detailed logging for development
DEBUG=true
LOG_LEVEL=debug

# Development Users (for reference)
DEV_ADMIN_EMAIL=admin@cosmical.me
DEV_DEVELOPER_EMAIL=developer@cosmical.me
DEV_CONTRIBUTOR_EMAIL=contributor@cosmical.me
DEV_MEMBER_EMAIL=member@cosmical.me
DEV_EXPLORER_EMAIL=explorer@cosmical.me

# Disable production-only features
DISABLE_ANALYTICS=true
