{
  "name": "Cosmical Space Explorer",
  "short_name": "Space Explorer",
  "description": "An immersive cosmic exploration PWA featuring interactive star systems, alien translations, and space documentation",
  "theme_color": "#0A0A0F",
  "background_color": "#0A0A0F",
  "display": "standalone",
  "orientation": "any",
  "scope": "/",
  "start_url": "/?source=pwa",
  "id": "/",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "categories": ["education", "entertainment", "science"],
  "screenshots": [
    {
      "src": "splash/home-screen.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Homescreen of Cosmical Space Explorer"
    },
    {
      "src": "splash/features-screen.png",
      "sizes": "1125x2436",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Features view of Cosmical Space Explorer"
    }
  ],
  "icons": [
    {
      "src": "icons/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Features",
      "url": "/features",
      "description": "Explore cosmic features",
      "icons": [{ "src": "icons/icon-192.svg", "sizes": "192x192" }]
    },
    {
      "name": "Documentation",
      "url": "/docs",
      "description": "Space documentation",
      "icons": [{ "src": "icons/icon-192.svg", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay"],
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  }
}
